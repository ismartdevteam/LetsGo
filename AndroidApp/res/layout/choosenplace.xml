<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/mn.student.letsgo"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/card_view"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >

        <mn.student.letsgo.text.Regular
            android:id="@+id/place_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_red" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_red" />

        <mn.student.letsgo.utils.CircleImageView
            android:id="@+id/place_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            app:border_color="@color/dark_red"
            app:border_width="1dp" />

        <mn.student.letsgo.text.Regular
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_red" />

        <mn.student.letsgo.text.Bold
            android:id="@+id/place_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/dark_green" />

        <mn.student.letsgo.text.Light
            android:id="@+id/place_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/dark_blue" />
       <mn.student.letsgo.text.Light
            android:id="@+id/place_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/dark_blue" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <mn.student.letsgo.utils.CircleImageView
                android:id="@+id/place_user_img"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <mn.student.letsgo.text.Light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/by"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_red" />

            <mn.student.letsgo.text.Light
                android:id="@+id/place_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_red" />
        </LinearLayout>

        <Button
            android:id="@+id/place_letsgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_but"
            android:padding="10dp"
            android:text="@string/letgoAndMap"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/place_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/red_but"
            android:padding="10dp"
            android:text="@string/showDetPlace"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>