<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res/mn.student.letsgo"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
    <mn.student.letsgo.common.CircleLayout
        android:id="@+id/user3_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_gravity="center_horizontal"
        circle:firstChildPosition="South" 
        circle:rotateToCenter="true" 
        circle:isRotating="true"
        circle:speed="75">
        
        <mn.student.letsgo.common.CircleView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_view_1" />
        <mn.student.letsgo.common.CircleView
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_view_2"  />
        <mn.student.letsgo.common.CircleView
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_view_3"  />

	</mn.student.letsgo.common.CircleLayout>
   <mn.student.letsgo.text.Bold
   	    android:layout_width="wrap_content"
   	    android:layout_height="0dp"
   	    android:layout_weight="1"
   	    android:text="@string/pay_description"
   	    android:textColor="@color/dark_blue"
   	    android:layout_gravity="center"/>


</LinearLayout>
